{
  "name": "qrookie-node",
  "version": "0.1.0",
  "private": true,
  "description": "QRookieNode is a cross-platform tool to manage Quest devices and games.",
  "author": {
    "name": "Victor Wads",
    "email": "victor.laureano+qrookienode@gmail.com"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.1.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.2",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:dev": "bash ./electron-dev.sh",
    "electron:build": "yarn build && tsc --project tsconfig.json && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^13.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@types/electron": "^1.6.12",
    "@types/jest": "^27.0.1",
    "@types/node": "^22.10.5",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "electron": "^33.3.1",
    "eslint": "^9.18.0",
    "eslint-config-react-app": "^7.0.1"
  },
  "build": {
    "appId": "br.com.victor.qrookie.node",
    "productName": "QRookieNode",
    "files": [
      "build/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "mac": {
      "identity": null,
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64","x64"]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["arm64", "x64"]
        }
      ],
      "icon": "assets/icon.png"
    }
  }
}